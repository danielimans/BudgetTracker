@model ExpenseTracker.Models.Expense
@{
    ViewData["Title"] = "Edit Expense";
}

<div class="container mt-5">
    <h2>Edit Expense</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Category</label>
            <input asp-for="Category" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Amount (RM)</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" required /> 
        </div>
        <div class="mb-3">
            <label class="form-label">Date</label>
            <input asp-for="Date" class="form-control" type="date" />
        </div>
        <div class="mb-3">
            <label class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

    <div class="mt-3">
        <a asp-controller="Budget" asp-action="Index" class="btn btn-outline-secondary">⬅ Back to Budget</a>
    </div>
</div>


